rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* =====================================================
       üîê HELPERS (SAFE)
       ===================================================== */

    function isSignedIn() {
      return request.auth != null;
    }

    function hasUserDoc() {
      return isSignedIn()
        && exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function userDoc() {
      return hasUserDoc()
        ? get(/databases/$(database)/documents/users/$(request.auth.uid)).data
        : null;
    }

    function isAdmin() {
      return isSignedIn()
        && hasUserDoc()
        && request.auth.uid == "DbnGP8iHXwbztZmy0Pc1XIwdou33"
        && userDoc().role == "admin";
    }

    /* =====================================================
       ‚úçÔ∏è WRITE PERMISSIONS
       ===================================================== */

    function canWrite() {
      return isSignedIn() && hasUserDoc() && (
        (
          (userDoc().userType == "Golfer"
            || userDoc().userType == "Junior")
          && userDoc().acceptedTerms == true
        )
        ||
        (
          (userDoc().userType == "Course"
            || userDoc().userType == "PGA Professional")
          && userDoc().verification.status == "approved"
        )
      );
    }

    function canPostScores() {
      return isSignedIn() && hasUserDoc() && (
        (
          (userDoc().userType == "Golfer"
            || userDoc().userType == "Junior")
          && userDoc().acceptedTerms == true
        )
        ||
        (
          userDoc().userType == "PGA Professional"
          && userDoc().verification.status == "approved"
        )
      );
    }

    // ‚úÖ UPDATED: Allow onboarding updates (ADDED lockerCompleted)
    function isOnboardingUpdate() {
      return request.resource.data.diff(resource.data).affectedKeys()
        .hasOnly([
          'userType',
          'displayName',
          'handicap',
          'homeClub',
          'city',
          'state',
          'location',
          'lockerCompleted',      // ‚úÖ REQUIRED FIX
          'acceptedTerms',
          'acceptedPrivacy',
          'termsAcceptedAt',
          'privacyAcceptedAt',
          'updatedAt',
          'verification',
          'userId',
          'email',
          'createdAt',
          'badges',
          'avatar',
          'cachedCourses',
          'cacheUpdatedAt'
        ]);
    }

    /* =====================================================
       üë§ USERS
       ===================================================== */

    match /users/{userId} {

      allow read: if isSignedIn();

      allow create: if isSignedIn()
        && request.auth.uid == userId;

      // ‚úÖ Allow onboarding updates OR normal updates with canWrite()
      allow update: if isSignedIn()
        && request.auth.uid == userId
        && (canWrite() || isOnboardingUpdate());

      allow delete: if isAdmin();

      /* -------- CACHED COURSES -------- */

      match /cachedCourses/{courseId} {
        allow read: if isSignedIn()
          && request.auth.uid == userId;

        allow write: if isSignedIn()
          && request.auth.uid == userId;

        allow delete: if isSignedIn()
          && request.auth.uid == userId;
      }
    }

    /* =====================================================
       üìù THOUGHTS (CLUBHOUSE FEED)
       ===================================================== */

    match /thoughts/{thoughtId} {

      allow read: if isSignedIn();

      allow create: if canWrite()
        && request.resource.data.userId == request.auth.uid;

      allow update, delete: if isSignedIn()
        && request.auth.uid == resource.data.userId
        && canWrite();

      allow update: if isSignedIn()
        && canWrite()
        && request.resource.data.diff(resource.data).affectedKeys()
          .hasOnly(["likes", "likedBy", "comments"]);

      allow update, delete: if isAdmin();

      match /comments/{commentId} {

        allow read: if isSignedIn();

        allow create: if canWrite();

        allow update, delete: if isSignedIn()
          && request.auth.uid == resource.data.userId
          && canWrite();

        allow delete: if isAdmin();
      }
    }

    /* =====================================================
       üèåÔ∏è SCORES (ANTI-SPOOFING)
       ===================================================== */

    match /scores/{scoreId} {

      allow read: if isSignedIn();

      allow create: if canPostScores()
        && request.resource.data.userId == request.auth.uid;

      allow update, delete: if isSignedIn()
        && request.auth.uid == resource.data.userId
        && canPostScores();

      allow delete: if isAdmin();
    }

    /* =====================================================
       üèÜ COURSE LEADERS (LOWMAN CACHE)
       ===================================================== */

    match /course_leaders/{courseId} {

      allow read: if isSignedIn();

      allow write: if false;

      allow write: if isAdmin();
    }

    /* =====================================================
       üó∫Ô∏è COURSES (API CACHE)
       ===================================================== */

    match /courses/{courseId} {

      allow read: if isSignedIn();

      allow create: if isSignedIn();

      allow update, delete: if false;

      allow update, delete: if isAdmin();
    }

    /* =====================================================
       üí¨ MESSAGES
       ===================================================== */

    match /messages/{messageId} {

      allow read: if isSignedIn()
        && (
          request.auth.uid == resource.data.senderId
          || request.auth.uid == resource.data.receiverId
        );

      allow create: if canWrite();

      allow delete: if isAdmin();
    }

    /* =====================================================
       üö´ DEFAULT DENY
       ===================================================== */

    match /{document=**} {
      allow read, write: if false;
    }
  }
}


