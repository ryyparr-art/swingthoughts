rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================================================
    // HELPER FUNCTIONS
    // ============================================================================
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isEmailVerified() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.emailVerified == true;
    }
    
    function isAdmin() {
      return isSignedIn() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    // Rate limiting helpers with fallbacks
    function canPost() {
      let userData = getUserData();
      // If lastPostTime doesn't exist or is null, allow the post
      return !('lastPostTime' in userData) || 
             userData.lastPostTime == null ||
             userData.lastPostTime < request.time - duration.value(30, 's');
    }
    
    function canComment() {
      let userData = getUserData();
      // If lastCommentTime doesn't exist or is null, allow the comment
      return !('lastCommentTime' in userData) || 
             userData.lastCommentTime == null ||
             userData.lastCommentTime < request.time - duration.value(5, 's');
    }
    
    function canMessage() {
      let userData = getUserData();
      // If lastMessageTime doesn't exist or is null, allow the message
      return !('lastMessageTime' in userData) || 
             userData.lastMessageTime == null ||
             userData.lastMessageTime < request.time - duration.value(10, 's');
    }
    
    function canScore() {
      let userData = getUserData();
      // If lastScoreTime doesn't exist or is null, allow the score
      return !('lastScoreTime' in userData) || 
             userData.lastScoreTime == null ||
             userData.lastScoreTime < request.time - duration.value(60, 's');
    }
    
    // ============================================================================
    // USERS COLLECTION
    // ============================================================================
    
    match /users/{userId} {
      // ✅ Anyone signed in can read user profiles (needed for feed, leaderboards, etc.)
      allow read: if isSignedIn();
      
      // ✅ FIXED: Removed email verification requirement for initial user creation
      // Users need to be able to create their account document before they can verify email
      allow create: if isSignedIn() && 
                       request.auth.uid == userId;
      
      // ✅ Allow users to update their own profile fields including:
      // - Profile data (displayName, handicap, avatar, etc.)
      // - Locker data (clubs, homeCourse, gameIdentity, displayBadges)
      // - Onboarding flags (lockerCompleted, acceptedTerms, hasSeenWelcomeTour)
      // - Location data
      // - Partner relationships (partners array) - can be updated by partners during accept flow
      // - Course relationships (playerCourses, declaredMemberCourses, pendingMembershipCourses)
      // - Email verification status (emailVerified)
      allow update: if isSignedIn() && 
                       (request.auth.uid == userId || 
                        isAdmin() ||
                        // ✅ Allow updating ONLY partners array if adding the current user as a partner
                        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['partners']) &&
                         request.resource.data.partners.hasAll(resource.data.get('partners', [])) &&
                         request.resource.data.partners.hasAny([request.auth.uid])));

      
      allow delete: if isAdmin();
    }
    
    // ============================================================================
    // THOUGHTS (POSTS) COLLECTION
    // ============================================================================
    
    match /thoughts/{thoughtId} {
      allow read: if true; // Public read
      
      allow create: if isSignedIn() && 
                       isEmailVerified() &&
                       canPost() &&
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.content.size() <= 280;
      
      allow update: if isSignedIn() && 
                       (request.auth.uid == resource.data.userId || isAdmin());
      
      allow delete: if isSignedIn() && 
                       (request.auth.uid == resource.data.userId || isAdmin());
      
      // Comments subcollection
      match /comments/{commentId} {
        allow read: if true;
        
        allow create: if isSignedIn() && 
                         isEmailVerified() &&
                         canComment() &&
                         request.resource.data.userId == request.auth.uid &&
                         request.resource.data.content.size() <= 500;
        
        // ✅ FIXED: Allow comment author to edit content, allow anyone to like/unlike
        allow update: if isSignedIn() && 
                         (
                           // Author can edit their own comment content
                           (request.auth.uid == resource.data.userId) ||
                           // Anyone can like/unlike (only updating likes and likedBy fields)
                           (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'likedBy'])) ||
                           // Admin can do anything
                           isAdmin()
                         );
        
        allow delete: if isSignedIn() && 
                         (request.auth.uid == resource.data.userId || isAdmin());
      }
    }
    
    // ============================================================================
    // MESSAGES COLLECTION
    // ============================================================================
    
    match /messages/{messageId} {
      allow read: if isSignedIn() && 
                     (request.auth.uid == resource.data.senderId || 
                      request.auth.uid == resource.data.receiverId ||
                      isAdmin());
      
      allow list, get: if isSignedIn();
      
      allow create: if isSignedIn() && 
                       isEmailVerified() &&
                       canMessage() &&
                       request.resource.data.senderId == request.auth.uid &&
                       request.resource.data.content.size() <= 1000;
      
      allow update: if isSignedIn() && 
                       (request.auth.uid == resource.data.senderId || 
                        request.auth.uid == resource.data.receiverId ||
                        isAdmin());
      
      allow delete: if isSignedIn() && 
                       (request.auth.uid == resource.data.senderId || 
                        request.auth.uid == resource.data.receiverId ||
                        isAdmin());
    }
    
    // ============================================================================
    // SCORES COLLECTION
    // ============================================================================
    
    match /scores/{scoreId} {
      allow read: if true;
      
      allow create: if isSignedIn() && 
                       isEmailVerified() &&
                       canScore() &&
                       request.resource.data.userId == request.auth.uid;
      
      allow update: if isSignedIn() && 
                       (request.auth.uid == resource.data.userId || isAdmin());
      
      allow delete: if isSignedIn() && 
                       (request.auth.uid == resource.data.userId || isAdmin());
    }
    
    // ============================================================================
    // NOTIFICATIONS COLLECTION
    // ============================================================================
    
    match /notifications/{notificationId} {
      // ✅ FIXED: Allow reading notifications for the recipient
      allow read: if isSignedIn() && 
                     (request.auth.uid == resource.data.userId || isAdmin());
      
      allow list, get: if isSignedIn();
      
      // ✅ FIXED: Anyone can create notifications (needed for partner accept notifications)
      allow create: if isSignedIn();
      
      allow update: if isSignedIn() && 
                       (request.auth.uid == resource.data.userId || isAdmin());
      
      allow delete: if isSignedIn() && 
                       (request.auth.uid == resource.data.userId || isAdmin());
    }
    
    // ============================================================================
    // REPORTS COLLECTION
    // ============================================================================
    
    match /reports/{reportId} {
      allow create: if isSignedIn() && isEmailVerified();
      
      allow read: if isSignedIn() && (
        request.auth.uid == resource.data.reporterId || isAdmin()
      );
      
      allow list, get: if isSignedIn();
      
      allow update, delete: if isAdmin();
    }
    
    // ============================================================================
    // VERIFICATION REQUESTS COLLECTION
    // ============================================================================
    
    match /verification_requests/{requestId} {
      allow read: if isAdmin();
      allow list, get: if isAdmin();
      
      allow create: if isSignedIn() && 
                       request.resource.data.userId == request.auth.uid;
      
      allow update, delete: if isAdmin();
    }
    
    // ============================================================================
    // PARTNER REQUESTS COLLECTION
    // ============================================================================
    
    match /partnerRequests/{requestId} {
      // ✅ FIXED: Allow reading if you're sender, receiver, or admin
      allow read: if isSignedIn() && 
                     (request.auth.uid == resource.data.fromUserId || 
                      request.auth.uid == resource.data.toUserId ||
                      isAdmin());
      
      allow list, get: if isSignedIn();
      
      // ✅ Allow creating partner requests
      allow create: if isSignedIn() && 
                       isEmailVerified() &&
                       request.resource.data.fromUserId == request.auth.uid;
      
      // ✅ FIXED: Allow both sender and receiver to update/delete
      // This is needed for accepting/rejecting requests
      allow update, delete: if isSignedIn() && 
                               (request.auth.uid == resource.data.fromUserId || 
                                request.auth.uid == resource.data.toUserId ||
                                isAdmin());
    }
    
    // ============================================================================
    // PARTNERS COLLECTION
    // ============================================================================
    
    match /partners/{partnerId} {
      // ✅ FIXED: Allow reading if you're one of the partners
      allow read: if isSignedIn() && 
                     (request.auth.uid == resource.data.user1Id || 
                      request.auth.uid == resource.data.user2Id ||
                      isAdmin());
      
      // ✅ Allow listing partnerships (for queries)
      allow list, get: if isSignedIn();
      
      // ✅ FIXED: Allow creating partnerships (needed when accepting partner requests)
      // Both users involved should be able to create
      allow create: if isSignedIn() && 
                       isEmailVerified() &&
                       (request.auth.uid == request.resource.data.user1Id || 
                        request.auth.uid == request.resource.data.user2Id);
      
      // ✅ FIXED: Allow updating/deleting if you're one of the partners
      allow update, delete: if isSignedIn() && 
                               (request.auth.uid == resource.data.user1Id || 
                                request.auth.uid == resource.data.user2Id ||
                                isAdmin());
    }
    
    // ============================================================================
    // COURSE MEMBERSHIPS COLLECTION
    // ============================================================================
    
    match /course_memberships/{membershipId} {
      // Allow users to read their own membership requests
      allow read: if isSignedIn() && 
                     (request.auth.uid == resource.data.userId || isAdmin());
      
      // Allow listing memberships (for queries)
      allow list, get: if isSignedIn();
      
      // Allow users to create membership requests
      allow create: if isSignedIn() && 
                       isEmailVerified() &&
                       request.resource.data.userId == request.auth.uid;
      
      // Only admins can update/delete
      allow update, delete: if isAdmin();
    }
    
    // ============================================================================
    // COURSES COLLECTION (cached golf courses)
    // ============================================================================
    
    match /courses/{courseId} {
      allow read: if true; // Public read
      allow create, update: if isSignedIn();
      allow delete: if isAdmin();
    }
    
    // ============================================================================
    // COURSE LEADERS COLLECTION
    // ============================================================================
    
    match /course_leaders/{courseLeaderId} {
      allow read: if true; // Public read
      allow create, update: if isSignedIn();
      allow delete: if isAdmin();
    }
    
    // ============================================================================
    // CLUBS COLLECTION
    // ============================================================================
    
    match /clubs/{clubId} {
      allow read: if true;
      allow create: if isSignedIn() && isEmailVerified();
      allow update, delete: if isSignedIn() && 
                               (request.auth.uid == resource.data.ownerId || isAdmin());
    }
  }
}